{% extends 'SonataAdminBundle:CRUD:edit.html.twig' %}

{% block sonata_pre_fieldsets %}
    {{ parent() }}
    <div class="col-md-12">
        <div class="tab-content">
            <div class="box box-primary">
                <div class="box-header">
                    <h4 class="box-title">YouTube Login</h4>
                    <p id="yt-status">Login with YouTube and choose from your available YouTube entities.</p>
                </div>
                <div class="box-body">
                    <div class="sonata-ba-collapsed-fields">
                        <div class="form-group">
                            <a href="http://www.youtube.com">Login with YouTube</a>
                        </div>
                        <div class="form-group">
                            <select id="livebroadcast-yt-entity-select">
                                <option>Select your YouTube entity</option>
                            </select>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    {% block youtube_js %}
        <script type="text/javascript">
            console.log('{{ admin.generateUrl('youTubeAccessToken') }}');
        </script>
    {% endblock %}
{% endblock %}
